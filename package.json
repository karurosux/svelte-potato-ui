{
	"name": "svelte-potato-ui",
	"version": "0.6.1",
	"readme": "README.md",
	"license": "MIT",
	"description": "Sleek and Simplistic Svelte UI Components",
	"main": "dist/index.js",
	"author": {
		"name": "Carlos Gonzalez",
		"email": "justdevelopitmx@proton.me"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/karurosux/svelte-potato-ui.git"
	},
	"homepage": "https://svelte-potato-ui.vercel.app",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"build:css": "tailwindcss -o dist/potato-ui.css -m",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint && npm run build:css",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"LICENSE",
		"README.md"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3.2.2",
		"@storybook/addon-essentials": "^8.4.5",
		"@storybook/addon-interactions": "^8.4.5",
		"@storybook/addon-svelte-csf": "^5.0.0-next.11",
		"@storybook/blocks": "^8.4.5",
		"@storybook/svelte": "^8.4.5",
		"@storybook/sveltekit": "^8.4.5",
		"@storybook/test": "^8.4.5",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/lodash": "^4.17.15",
		"@types/uuid": "^10.0.0",
		"autoprefixer": "^10.4.20",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"publint": "^0.2.0",
		"storybook": "^8.4.5",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.9",
		"typescript": "^5.0.0",
		"vite": "^5.0.11",
		"vitest": "^2.0.4"
	},
	"dependencies": {
		"@tailwindcss/typography": "^0.5.15",
		"lodash": "^4.17.21",
		"uuid": "^11.0.3"
	}
}
